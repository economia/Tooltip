.tooltip
    font-family arial, helvetica, sans-serif
    z-index 50
    position absolute
    border 1px solid black
    border-radius 3px
    max-width 270px
    background-color white
    padding 5px 10px
    margin-top -8px
    margin-left 0px
    box-shadow #444 0px 0px 5px

    p.only-child
        margin 0px
